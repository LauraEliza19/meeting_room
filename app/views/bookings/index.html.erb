<% if logged_in? %>
    <div class="mb-0 text-center" style="background-color:#d4edda">
        <%= notice %> 
    </div> 
<%end%>
         

<%= render 'layouts/header'%> 
<% if logged_in? %>
    <%= week_calendar do |date| %>
<%end%>
 
    

 <% else %> 

 <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
    <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
    </symbol>
    </svg>
    <div class="container">
        <div class="alert alert-danger d-flex align-items-center" role="alert">
            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
            <h1>Para verificar as reunioes você precisa estar logado!</h1>
        </div>
    </div>
    <div
  class="bg-image"
  style="background-color: #fcfcfc;"
>
    <div class="card d-flex p-5 rounded w-25 position-absolute top-50 start-50 translate-middle shadow-lg p-5 mb-5 bg-dark" style="background-color: #405073" >
        <div class="text-light d-flex justify-content-center">
        <h2>Entrar</h2>
        </div>
        <div class="card-body">
                <%= form_with(scope: :session, url: sessions_path) do |f| %>
                    <div class="input-group mb-3 ">                    
                        <%= f.label :Usuário, class:"input-group-text pe-3" %>
                        <%= f.text_field :name, class:"form-control" %>
                    </div>

                   
                    <div class="input-group mb-3">
                        <%= f.label :senha, class:"input-group-text pe-3" %>
                        <%= f.password_field :password, class:"form-control" %>
                    </div>
                    <div class="text-center mb-3">
                        <%= f.submit "Login", class:"btn btn-light"%>
                    </div>

                    <div class="alert alert-dark" role="alert">
                        Novo usuário? 
                    <%= link_to "Crie sua conta!", new_user_path %>
                    </div>
                    
                    
                <% end %>
        </div>
    </div>
</div>
<% end %> 


    

