<div
  class="bg-image"
  style="background-color: #fcfcfc;"
>
<%= form_for @user do |f| %>
        <% if @user.errors.any? %>
            <div id="error_explanation">
                        <div class="alert alert-danger d-block">
                                    O formulário contém <%= pluralize(@user.errors.count, "erro") %>.
                        
                            <ul>
                                    <% @user.errors.full_messages.each do |msg| %>
                                    <li><%= msg %></li>
                                    <% end %>
                            </ul>
                        </div>
            </div>
        <% end %>
    <div class="card  p-5 rounded w-25 position-absolute top-50 start-50 translate-middle shadow-lg p-5 mb-5 bg-dark">
        <div class="text-light d-flex justify-content-center">
        <h2>Entrar</h2>
        </div>
        <div class="card-body">
                
                  <div class="input-group mb-3 ">                    
                        <%= f.label :nome, class:"input-group-text pe-3" %>
                        <%= f.text_field :name, class:"form-control" %>
                    </div>

                    <div class="input-group mb-3">                
                        <%= f.label :email, class:"input-group-text pe-3" %>
                        <%= f.email_field :email, class:"form-control" %>
                    </div>

                    <div class="input-group mb-3">
                        <%= f.label :senha, class:"input-group-text pe-3" %>
                        <%= f.password_field :password, class:"form-control" %>
                    </div>
                    <div class="input-group mb-3">
                        <%= f.label :confirme, class:"input-group-text" %>
                        <%= f.password_field :password_confirmation, class:"form-control" %>
                    </div>
                    <div class="text-center mb-3">
                        <%= f.submit "Login", class:"btn btn-light"%>
                    </div>
                    
                    
<% end %>
        </div>
    </div>
</div>

